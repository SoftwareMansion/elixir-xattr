# EditorConfig is awesome: http://EditorConfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true
tab_width = 4
trim_trailing_whitespace = true

[*.{ex,exs}]
tab_width = 2

[*.{h,c,cpp}]
tab_width = 2

[Makefile]
indent_style = tab

[Makefile.win]
end_of_line = crlf
indent_style = tab
